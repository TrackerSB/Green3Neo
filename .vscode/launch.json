{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend: Debug app",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}/frontend",
            "flutterMode": "debug",
            "preLaunchTask": "Build application"
        },
        {
            "name": "Run all tests",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "command": "just test"
        },
        {
            "name": "Frontend: Debug current test file",
            "type": "dart",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/frontend",
            "preLaunchTask": "Build application"
        },
        {
            "name": "Backend: Debug unittests",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--manifest-path",
                    "${workspaceFolder}/backend/Cargo.toml",
                    "--",
                    // FIXME Seems to have no effect
                    "--nocapture"
                ],
                "filter": {
                    "name": "backend"
                }
            },
            "preLaunchTask": "Build backend"
        }
    ]
}